{
    "rewrites": [
      {
        "source": "/assets/(.*)",
        "destination": "/auth"  // This will serve a 404 page if accessed directly
      }
    ],
    "headers": [
      {
        "source": "/assets/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"  // Set the cache header for assets
          }
        ]
      }
    ]
  }
  